{
  "markdownlint.onChange": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.width": 30,
  "explorer.file.showHiddenFiles": true,
  "explorer.icon.source": "builtin",
  "explorer.previewAction.onHover": false,
  "explorer.floating.position": "center",
  "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
  "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS",
  "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
  "explorer.floating.width": -5,
  "html.suggest.html5": true,
  "html.trace.server": "off",
  "html.enable": true,
  "html.format.enable": true,
  "html.autoClosingTags": true,
  "html.validate.styles": true,
  "html.validate.scripts": true,
  "html.filetypes": ["html", "handlebars", "htmldjango", "blade", "handlebars"],
  "tsserver.enable": true,
  "tsserver.typingsCacheLocation": "./cache",
  "tsserver.enableJavascript": true,
  "typescript.suggest.autoImports": true,
  "prettier.trailingComma": "none",
  "prettier.arrowParens": "always",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "typescript",
    "python",
    "yaml",
    "handlebars",
    "html",
    "c",
    "json"
  ],
  "vimlsp.filetypes": [
    "vim",
    "html",
    "css",
    "js",
    "ts",
    "md",
    "py",
    "yaml",
    "lock",
    "yml"
  ],
  "vimlsp.trace.server": "off",
  "npm.binPath": "yarn",
  "typescript.showDeprecated": true,
  "typescript.autoClosingTags": true,
  "typescript.suggest.importStatements": true,
  "tsserver.tsconfigPath": "tsconfig.json",
  "tsserver.disableAutomaticTypeAcquisition": true,
  "tsserver.locale": "pt-br",
  "jest.watch": true,
  "jest.configFileName": "jest.config.js",
  "yaml.enable": true,
  "yaml.format.enable": true,
  "yaml.trace.server": "off",
  "yaml.format.bracketSpacing": true
}
